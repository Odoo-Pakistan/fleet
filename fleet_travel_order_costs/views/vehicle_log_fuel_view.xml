<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>


	     <!-- #### FORM VIEW #### -->

 		<record model='ir.ui.view' id='fleet_vehicle_log_fuel_form_inherit'>
        	<field name="name">fleet.vehicle.log.fuel.form.inherit</field>
            <field name="model">fleet.vehicle.log.fuel</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_log_fuel_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='odometer']/.." position="after">
                        <field name="travel_order_id" domain="[('vehicle_id','=',vehicle_id)]" readonly="0"/>
                </xpath>
            </field>
        </record>


        <!-- #### SEARCH VIEW #### -->

        <record model="ir.ui.view" id="view_fuel_log_search_inherit">
			<field name="name">view.vehicle.fuel.log.search.inherit</field>
			<field name="model">fleet.vehicle.log.fuel</field>
			<field name="inherit_id" ref="fleet.fleet_vehicle_log_fuel_search" />
			<field name="arch" type="xml">
				<data>
					<xpath expr="//filter[@name='groupby_vehicle']" position="after">
						<filter name="groupby_travel_order" context="{'group_by' : 'travel_order_id'}" string="Travel Order"/>
					</xpath>
				</data>
			</field>
		</record>


	</data>
</openerp>