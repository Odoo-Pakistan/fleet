						<field name="width" /> m
						<field name="length" /> m
						<field name="volume" /> m3
						<field name="notes" />
					</xpath>

					<xpath expr="//field[@name='seats']" position="before">
						<field name="gps_num" />
						<field name="year_manufactured" />
						<field name="country_id" />
					</xpath>

					<xpath expr="//field[@name='transmission']" position="before">
