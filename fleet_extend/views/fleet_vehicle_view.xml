			<field name="model">fleet.vehicle</field>
			<field name="inherit_id" ref="fleet.fleet_vehicle_form" />
			<field name="arch" type="xml">
				<data>

					<xpath expr="//label[@for='license_plate']" position="before">
						<label for="type_id" class="oe_edit_only" />
